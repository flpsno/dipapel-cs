
@{
    ViewBag.Title = "Index";
}

<h2>Listagem dos Pedidos</h2>

<div>
    <a href="/Pedidos/Add">Adicionar Pedido</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Codigo</th>
            <th>Comprador</th>
            <th>Data Pedido</th>
            <th>Total Itens</th>
            <th>Valor Total</th>
            <th>Tipo Frete</th>
            <th>Valor Frete</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Codigo</td>
                <td>@item.Comprador</td>
                <td>@item.DataPedido.ToString("dd/MM/yyyy")</td>
                <td>@item.TotalItens</td>
                <td>@item.ValorTotal.ToString("0.00")</td>
                <td>@item.TipoFrete</td>
                <td>@item.ValorFrete.ToString("0.00")</td>
            <td>
                <a href="/Clientes/Edit/@item.Id">Editar</a> / <a href="/Clientes/Delete/@item.Id">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>


